// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "src/extension/tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "extension: watch",
      "dependsOn": [
        "webviews: watch",
        "display worker: watch",
        "display: watch"
      ]
    },
    {
      "type": "shell",
      "command": "npm run watch:webviews",
      "problemMatcher": "$esbuild-watch",
      "isBackground": true,
      "group": "build",
      "label": "webviews: watch"
    },
    {
      "type": "shell",
      "command": "npm run watch:display",
      "problemMatcher": "$esbuild-watch",
      "isBackground": true,
      "group": "build",
      "label": "display: watch"
    },
    {
      "type": "shell",
      "command": "npm run watch:display:worker",
      "problemMatcher": "$esbuild-watch",
      "isBackground": true,
      "group": "build",
      "label": "display worker: watch"
    }
  ]
}
