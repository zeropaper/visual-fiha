{
  "private": true,
  "name": "fiha",
  "version": "3.0.0",
  "description": "VJing extension for VS Code",
  "author": "Valentin Vago <zeropaper@irata.ch> (http://irata.graphics/)",
  "license": "MIT",
  "engines": {
    "node": "^16.4.0",
    "npm": "^7.19.0",
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/vf.config.js",
    "workspaceContains:**/fiha.json",
    "onCommand:visualFiha.start",
    "onCommand:visualFiha.doRefactor",
    "onWebviewPanel:visualFiha"
  ],
  "main": "./out/extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "visualFiha.start",
        "title": "Start cat coding session",
        "category": "Visual Fiha"
      },
      {
        "command": "visualFiha.doRefactor",
        "title": "Do some refactoring",
        "category": "Visual Fiha"
      }
    ]
  },
  "scripts": {
    "test": "jest --coverage",
    "watch:test": "jest --watch",
    "vscode:prepublish": "run-p compile:*",
    "compile:extension": "tsc -p ./src/extension/tsconfig.json",
    "compile:webviews": "esbuild ./src/webviews/index.tsx --sourcemap --bundle --minify --tsconfig=./src/webviews/tsconfig.json --outfile=./out/webviews/index.js",
    "compile:capture": "esbuild ./src/capture/index.ts --sourcemap --bundle --minify --tsconfig=./src/capture/tsconfig.json --outfile=./out/capture/index.js",
    "compile:display": "esbuild ./src/display/index.ts --sourcemap --bundle --minify --tsconfig=./src/display/tsconfig.json --outfile=./out/display/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "watch:extension": "tsc -w -p ./src/extension/tsconfig.json",
    "watch:webviews": "esbuild ./src/webviews/index.tsx --sourcemap --bundle --watch --tsconfig=./src/webviews/tsconfig.json --outfile=./out/webviews/index.js",
    "watch:capture": "esbuild ./src/capture/index.ts --sourcemap --bundle --watch --tsconfig=./src/capture/tsconfig.json --outfile=./out/capture/index.js",
    "watch:display": "esbuild ./src/display/index.ts --sourcemap --bundle --watch --tsconfig=./src/display/tsconfig.json --outfile=./out/display/index.js",
    "watch:display:worker": "esbuild ./src/display/DisplayWorker.ts --sourcemap --bundle --watch --tsconfig=./src/display/tsconfig.json --outfile=./out/display/DisplayWorker.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@mantine/core": "2.0.4",
    "@mantine/hooks": "2.0.4",
    "@reduxjs/toolkit": "1.6.0",
    "@types/jest": "26.0.24",
    "@types/mime": "2.0.3",
    "@types/node": "16.3.2",
    "@types/react": "17.0.14",
    "@types/react-dom": "17.0.9",
    "@types/react-redux": "7.1.18",
    "@types/three": "0.130.0",
    "@types/vscode": "1.58.1",
    "@types/vscode-webview": "1.57.0",
    "@typescript-eslint/eslint-plugin": "4.28.3",
    "@typescript-eslint/parser": "4.28.3",
    "canvas": "2.8.0",
    "esbuild": "0.12.15",
    "eslint": "7.30.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "lint-staged": "11.0.1",
    "npm-run-all": "4.1.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "7.2.4",
    "redux": "4.1.0",
    "three": "0.130.1",
    "ts-jest": "27.0.3",
    "ts-node": "10.1.0",
    "typescript": "4.3.5"
  },
  "workspaces": [
    "packages/controller",
    "packages/display",
    "packages/vscode"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zeropaper/visual-fiha.git"
  },
  "bugs": {
    "url": "https://github.com/zeropaper/visual-fiha/issues"
  },
  "homepage": "https://github.com/zeropaper/visual-fiha",
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix"
  },
  "dependencies": {
    "mime": "2.5.2",
    "socket.io": "4.1.3",
    "socket.io-client": "4.1.3"
  }
}
