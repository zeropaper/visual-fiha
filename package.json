{
  "private": true,
  "name": "fiha",
  "version": "3.0.0",
  "description": "VJing extension for VS Code",
  "author": "Valentin Vago <zeropaper@irata.ch> (http://irata.graphics/)",
  "license": "MIT",
  "engines": {
    "node": "^16.4.0",
    "npm": "^7.19.0",
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/vf.config.js",
    "workspaceContains:**/fiha.json",
    "onCommand:visualFiha.start",
    "onCommand:visualFiha.doRefactor",
    "onWebviewPanel:visualFiha"
  ],
  "main": "./out/extension/index.js",
  "contributes": {
    "commands": [
      {
        "command": "visualFiha.start",
        "title": "Start cat coding session",
        "category": "Visual Fiha"
      },
      {
        "command": "visualFiha.doRefactor",
        "title": "Do some refactoring",
        "category": "Visual Fiha"
      }
    ]
  },
  "scripts": {
    "test": "jest --coverage",
    "watch:test": "jest --watch",
    "vscode:prepublish": "run-p compile:*",
    "compile:extension": "tsc -p ./src/extension/tsconfig.json",
    "compile:webviews": "esbuild ./src/webviews/index.ts --bundle --minify --tsconfig=./src/webviews/tsconfig.json --outfile=./out/webviews/index.js",
    "compile:display": "esbuild ./src/display/index.ts --bundle --minify --tsconfig=./src/display/tsconfig.json --outfile=./out/display/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "watch:extension": "tsc -w -p ./src/extension/tsconfig.json",
    "watch:webviews": "esbuild ./src/webviews/index.ts --bundle --watch --tsconfig=./src/webviews/tsconfig.json --outfile=./out/webviews/index.js",
    "watch:display": "esbuild ./src/display/index.ts --bundle --watch --tsconfig=./src/display/tsconfig.json --outfile=./out/display/index.js",
    "watch:display:worker": "esbuild ./src/display/DisplayWorker.ts --bundle --watch --tsconfig=./src/display/tsconfig.json --outfile=./out/display/DisplayWorker.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/mime": "^2.0.3",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.47.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.16.0",
    "esbuild": "^0.12.12",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "workspaces": [
    "packages/controller",
    "packages/display",
    "packages/vscode"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeropaper/visual-fiha.git"
  },
  "bugs": {
    "url": "https://github.com/zeropaper/visual-fiha/issues"
  },
  "homepage": "https://github.com/zeropaper/visual-fiha#readme",
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix"
  },
  "dependencies": {
    "mime": "^2.5.2",
    "socket.io": "^4.1.2",
    "socket.io-client": "^4.1.2"
  }
}
